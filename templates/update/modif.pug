    body
        <h1>Formulaire de modification :</h1>
        <div class="container">
            <form class="row g-3" method="post">
            
            <div class="col-auto">
                <label for="email" class="visually-hidden">*</label>
                <input type="email" name= "email" class="form-control" id="email" placeholder="Email" value="#{user.email}">
            </div>
            <br>
            <div class="col-auto">
                <label for="civility" class="visually-hidden">*</label>
                <input type="text" name= "civility" class="form-control" id="civility" placeholder="Civility" value="#{user.civility}">
            </div>
            <br>
            <div class="col-auto">
                <label for="lastname" class="visually-hidden">*</label>
                <input type="text" name="lastname" class="form-control" id="lastname" placeholder="PrÃ©nom" value="#{user.lastname}">
            </div>
            <br>
            <div class="col-auto">
                <label for="firstname" class="visually-hidden">*</label>
                <input type="text" name= "firstname" class="form-control" id="firstname" placeholder="Nom" value="#{user.firstname}">
            </div>
            <br>
            <div class="col-auto">
                <label for="phone" class="visually-hidden">*</label>
                <input type="text" name= "phone" class="form-control" id="phone" placeholder="phone" value="#{user.phone}">
            </div>
            <br>
            
            <div class="col-auto">
                <button type="submit" name="submit" class="btn btn-success mb-3">Modifier</button>
            </div>
            <div class="col-auto">
                <button type="submit" name="submit" class="btn btn-primary mb-3">Retour</button>
            </div>
            </form>
        </div>
